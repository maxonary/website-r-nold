<div id="background-image-container">
    <div id="gradient"></div>
</div>

<style>
    #background-image-container {
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -3;
    }

    #gradient {
        background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(131, 31, 31, 0.5));
        position: fixed;
        width: 100%;
        height: 100%;
        z-index: -1;
    }
</style>

